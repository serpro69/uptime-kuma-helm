{
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(sort:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "mcp__serena__get_symbols_overview",
      "mcp__serena__find_file",
      "mcp__serena__find_symbol",
      "mcp__serena__insert_after_symbol",
      "mcp__serena__insert_before_symbol",
      "mcp__serena__list_dir",
      "mcp__serena__replace_symbol_body",
      "mcp__serena__search_for_pattern",
      "mcp__serena__think_about_collected_information",
      "mcp__task-master-ai__add_task",
      "mcp__task-master-ai__analyze_project_complexity",
      "mcp__task-master-ai__complexity_report",
      "mcp__task-master-ai__expand_all",
      "mcp__task-master-ai__expand_task",
      "mcp__task-master-ai__get_task",
      "mcp__task-master-ai__get_tasks",
      "mcp__task-master-ai__next_task",
      "mcp__task-master-ai__parse_prd",
      "mcp__task-master-ai__set_task_status",
      "mcp__task-master-ai__update_subtask",
      "mcp__zen__codereview",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(task-master:*)",
      "Read(./examples)",
      "Read(./**/consensus*.md)",
      "Read(./**/review*.md)",
      "Read(./**/.env)",
      "Read(./**/service-account-key.json)",
      "Read(*.csv)",
      "Read(*.log)",
      "Read(*.pyc)",
      "Read(./**/*.lock*)",
      "Read(.git/)",
      "Read(.idea/)",
      "Read(.vscode/)",
      "Read(.next/)",
      "Read(./**/.ansible/)",
      "Read(./**/.terraform/)",
      "Read(./**/build/)",
      "Read(./**/data/)",
      "Read(./**/dist/)",
      "Read(./**/out/)",
      "Read(./**/node_modules/)",
      "Read(./**/venv/)",
      "Read(./**/__pycache__/)"
    ],
    "ask": []
  },
  "enabledMcpjsonServers": [],
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": 64000,
    "MAX_MCP_OUTPUT_TOKENS": 64000
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/scripts/validate-bash.sh"
          }
        ]
      }
    ]
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "bash $CLAUDE_PROJECT_DIR/.claude/scripts/statusline.sh"
  }
}
